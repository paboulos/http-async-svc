{
    "name": "http-crud",
    "version": "1.0.1",
    "description": "A module that Node apps can use to easily make asynchronous network requests with TypesScript or JavaScript.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "mocha --reporter spec",
        "build": "npm run lint && npm run clean && tsc",
        "lint": "tsc --noEmit && eslint lib/**/*.{js,ts,tsx} --quiet --fix",
        "clean": "rimraf dist",
        "demo": "ts-node ./demo.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged",
            "pre-push": "npm test"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "engines": {
        "node": ">=6.4.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/paboulos/http-async-svc.git"
    },
    "author": "Paul Boulos",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/paboulos/http-async-svc/issues"
    },
    "homepage": "https://github.com/paboulos/http-async-svc#readme",
    "devDependencies": {
        "@types/ramda": "^0.27.4",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "fetch-mock": "^9.4.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.3",
        "mocha": "^7.1.1",
        "prettier": "^2.0.4",
        "proxyquire": "^2.1.3",
        "ramda": "^0.27.0",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/node-fetch": "^2.5.6",
        "node-fetch": "^2.6.0"
    }
}
